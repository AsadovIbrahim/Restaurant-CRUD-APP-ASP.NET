@model Menu

<form class="container" asp-action="Create">
    <div class="form-group">
        <label>Title</label>
        <input asp-for="Title" type="text" class="form-control" placeholder="Enter Title">
    </div>

    <div class="form-group">
        <label>Price</label>
        <input asp-for="Price" type="text" class="form-control" placeholder="Enter Price">
    </div>

     <div class="form-group">
        <label>Description</label>
        <input asp-for="Description" type="text" class="form-control" placeholder="Enter Description">
    </div>

    <div class="form-group">
        <label>Image</label>
        <input asp-for="ImageUrl" type="text" class="form-control" placeholder="Enter Image">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>