@model Menu


<form class="container" asp-action="Update" enctype="multipart/form-data">
    <div class="form-group">
        <label>Title</label>
        <input asp-for="Title" class="form-control" placeholder="Enter Title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Price</label>
        <input asp-for="Price" class="form-control" placeholder="Enter Price">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Description</label>
        <input asp-for="Description" class="form-control" placeholder="Enter Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Image</label>
        <input asp-for="ImgFile" class="form-control" placeholder="Enter Image">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>